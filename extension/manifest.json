{
  "manifest_version": 3,
  "name": "MeetingListener",
  "version": "0.1.0",
  "description": "Chrome extension that captures Google Meet audio, transcripts speech, and generates summaries with action items.",
  "permissions": [
    "tabCapture",
    "scripting",
    "storage",
    "offscreen",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meeting Listener"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["meet-observer.js"],
      "run_at": "document_idle"
    }
  ]
}
